# ===========================================
# Vectabase Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vectabase
DB_USER=vectabase_admin
DB_PASSWORD=your_secure_password_here

# 64-character hex string for AES-256 encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DB_ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# ===========================================
# API SERVER CONFIGURATION
# ===========================================
API_PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_at_least_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Use sk_test_ for development, sk_live_ for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Platform fee percentage (e.g., 10 for 10%)
STRIPE_PLATFORM_FEE_PERCENT=10

# ===========================================
# DISCORD OAUTH CONFIGURATION
# ===========================================
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:3001/api/auth/discord/callback

# Discord Bot Token (for bot functionality)
DISCORD_BOT_TOKEN=your_discord_bot_token

# ===========================================
# SUPABASE (for migration only)
# ===========================================
# These are only needed during migration from Supabase
# Remove after migration is complete
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
