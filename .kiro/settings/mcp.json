{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp",
        "--browser=chrome"
      ],
      "disabled": false,
      "autoApprove": [
        "playwright_navigate",
        "playwright_click",
        "playwright_type",
        "playwright_screenshot",
        "playwright_get_page_content",
        "playwright_fill",
        "browser_navigate",
        "browser_wait_for",
        "browser_take_screenshot",
        "*",
        "browser_close",
        "browser_click"
      ],
      "disabledTools": []
    }
  }
}